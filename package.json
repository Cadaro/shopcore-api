{
  "name": "shopcore-api",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "license": "MIT",
  "scripts": {
    "dev": "node ace serve --watch",
    "build": "node ace build",
    "start": "node build/bin/server.js",
    "test": "node ace test",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc --noEmit"
  },
  "imports": {
    "#controllers/*": "./app/controllers/*.js",
    "#exceptions/*": "./app/exceptions/*.js",
    "#models/*": "./app/models/*.js",
    "#mails/*": "./app/mails/*.js",
    "#services/*": "./app/services/*.js",
    "#listeners/*": "./app/listeners/*.js",
    "#events/*": "./app/events/*.js",
    "#middleware/*": "./app/middleware/*.js",
    "#validators/*": "./app/validators/*.js",
    "#providers/*": "./providers/*.js",
    "#policies/*": "./app/policies/*.js",
    "#abilities/*": "./app/abilities/*.js",
    "#database/*": "./database/*.js",
    "#start/*": "./start/*.js",
    "#tests/*": "./tests/*.js",
    "#config/*": "./config/*.js",
    "#types/*": "./app/types/*.js",
    "#mappers/*": "./app/mappers/*.js",
    "#validatorTypes/*": "./app/validators/validatorTypes/*.js"
  },
  "devDependencies": {
    "@adonisjs/assembler": "^7.7.0",
    "@adonisjs/eslint-config": "^2.1.2",
    "@adonisjs/prettier-config": "^1.4.5",
    "@adonisjs/tsconfig": "^1.3.0",
    "@eslint/js": "^9.39.1",
    "@japa/api-client": "^3.1.0",
    "@japa/assert": "^4.1.1",
    "@japa/expect-type": "^2.0.2",
    "@japa/plugin-adonisjs": "^4.0.0",
    "@japa/runner": "^4.4.0",
    "@swc/core": "^1.7.6",
    "@types/luxon": "^3.4.2",
    "@types/node": "^24.5.2",
    "better-sqlite3": "^12.2.0",
    "eslint": "^9.39.1",
    "hot-hook": "^0.4.0",
    "pino-pretty": "^13.1.1",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.48.1"
  },
  "dependencies": {
    "@adonisjs/auth": "^9.4.2",
    "@adonisjs/bouncer": "^3.1.6",
    "@adonisjs/core": "^6.19.0",
    "@adonisjs/cors": "^2.2.1",
    "@adonisjs/lucid": "^21.8.0",
    "@vinejs/vine": "^3.0.1",
    "luxon": "^3.5.0",
    "mysql2": "^3.15.0",
    "reflect-metadata": "^0.2.2"
  },
  "hotHook": {
    "boundaries": [
      "./app/controllers/**/*.ts",
      "./app/middleware/*.ts"
    ]
  },
  "overrides": {
    "strtok3": "8.0.1"
  },
  "resolutions": {
    "strtok3": "8.0.1"
  },
  "pnpm": {
    "overrides": {
      "strtok3": "8.0.1"
    }
  },
  "eslintConfig": {
    "extends": "@adonisjs/eslint-config/app"
  }
}
